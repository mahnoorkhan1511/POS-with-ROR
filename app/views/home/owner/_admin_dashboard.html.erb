
    

  <!-- Bottom big row -->
    <div class="h-5/6 bg-white flex flex-col rounded-xl overflow-y-auto max-h-screen p-4  mt-4">
      <!-- profits and graphs -->
        <p class="p-5 font-bold text-3xl">Stats</p>
        <div class="flex flex-wrap justify-between px-20 pt-5  h-1/2 gap-4">
            <div class="max-h-80 aspect-[4/3] bg-slate-100 rounded-xl shadow p-4 w-full md:w-[48%] ">
                <%= line_chart [{ name: "Daily Profit", data: { '2025-04-01' => 10, '2025-04-02' => 20, '2025-04-03' => 15 } }], width: "100%", height: "100%"%>
            </div>

            <div class="max-h-80 aspect-[4/3] bg-slate-100 rounded-xl shadow p-4 w-full md:w-[48%]">
                <%= line_chart [{ name: "Monthly Revenue", data: { 'Jan' => 300, 'Feb' => 400, 'Mar' => 350 } }], width: "100%", height: "100%" %>
            </div>
        </div>
      <!-- Top products  -->
      <p class="p-5 font-bold text-3xl">Top Selling Products </p>
      <div class="container px-10  max-w-screen ">
        <div class="grid grid-cols-3 gap-4 ">
            <% @product.each do |pro|%>
                <div class="card bg-base-50 w-96 shadow-sm bg-gradient-to-b from-slate-900 to-slate-500">
                    <figure class="h-48 ">
                       <%= image_tag pro[:image_url], class:"object-cover object-center"%>
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title"><%= pro[:name]%></h2>
                        <p><%= pro[:description]%></p>
                        <div class="card-actions justify-end">
                        <button class="btn btn-primary"><%= pro[:sold]%></button>
                        </div>
                    </div>
                </div>
            <% end %>
           
        </div>
      </div>

    </div>

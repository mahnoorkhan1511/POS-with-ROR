<h2 class= "text-2xl font-semibold mb-4 text-center"><%= t "devise.invitations.edit.header" %></h2>
<div class="flex justify-center">
<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700'%>
      <%= f.password_field :password, class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password_confirmation, class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
    </div>
  <% end %>

  <div class="actions  mt-4 bg-blue-500 text-white rounded px-4 py-2 text-center hover:bg-blue-800">
    <%= f.submit t("devise.invitations.edit.submit_button") %>
  </div>
<% end %>
</div>

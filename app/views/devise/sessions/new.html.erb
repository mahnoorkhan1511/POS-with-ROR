<%= render 'devise/shared/auth_modal' do%>
  <h2 class= "text-2xl font-semibold mb-4 text-center">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { method: :post , data: { turbo: false }}) do |f| %>
    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
    </div>

    <div >
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: ' text-sm text-gray-700' %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in" , class: 'w-full mt-4 bg-blue-500 text-white rounded px-4 py-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<%end%>
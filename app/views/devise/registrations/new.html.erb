<%= render 'devise/shared/auth_modal' do%>
<h2 class= "text-2xl font-semibold mb-4 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <% if @minimum_password_length %>
    <em class="text-xs text-gray-500 ">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 border border-gray-300 rounded w-full' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: 'w-full mt-4 bg-lime-900 text-white rounded px-4 py-2 hover:bg-lime-700' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%end%>
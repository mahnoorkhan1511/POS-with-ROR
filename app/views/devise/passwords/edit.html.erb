<%= render 'devise/shared/auth_modal' do%>
<h2 class="text-2xl font-semibold mb-4 text-center">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" ,class: 'block text-sm font-medium text-gray-700'%>
    <% if @minimum_password_length %>
      <em class="block text-sm font-medium text-gray-700">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'w-full border border-gray-300 p-2' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'w-full border border-gray-300 p-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'w-full mt-4 bg-blue-500 text-white rounded px-4 py-2'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%end%>
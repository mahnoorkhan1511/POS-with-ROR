<%= render 'devise/shared/auth_modal' do%>
<h2 class="text-2xl font-semibold mb-4 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-full border border-gray-300 p-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'text-blue-500 hover:text-blue-700'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>

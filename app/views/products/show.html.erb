<%= turbo_frame_tag "show_product" do %>
  <div data-controller="modal" 
    data-action="click->modal#close"
    data-modal-target="background" class= "fixed inset-0 backdrop-blur flex justify-center items-center z-50 text-black ">
    <div data-modal-target="content" class="bg-white p-6 rounded-lg shadow-lg w-full max-w-3xl ">
      <div class="flex flex-row p-10">

        <%= image_tag @product.featured_image, class:'h-70 w-70 rounded-xl' if @product.featured_image.attached? %>
        <div class="flex flex-col pl-10 w-150">

          <h1 class="text-2xl font-semibold"> <%= @product.name %></h1>
          <p class="text-lg font-medium"> <%= @product.description%></p>
          <div class="pt-3">
            <% @product.tags.each do |tag| %>
              <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-1">
                <%= tag.tag %>
              </span>
            <% end %>
          </div>
          <!-- Add to cart -->
          <div class="flex flex-row">
            <%= form_with url: add_to_cart_path, method: :post, data: { turbo: false } do |form| %>
              <% form.hidden_field :id, value: @product.id%>
              <div class="max-w-sm relative mt-4 mb-4" data-controller="amount">
                <div class="relative">
                  
                  <button
                    id="decreaseButton"
                    class="absolute left-1 top-1  rounded bg-slate-800 p-1.5 border border-transparent text-center text-sm text-white transition-all shadow-sm hover:shadow focus:bg-slate-700 focus:shadow-none active:bg-slate-700 hover:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                    type="button"
                    data-action="click->amount#decrease"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
                      <path d="M3.75 7.25a.75.75 0 0 0 0 1.5h8.5a.75.75 0 0 0 0-1.5h-8.5Z" />
                    </svg>
                  </button>
                  <input
                    id="amountInput"
                    type="number"
                    name="quantity"
                    value="0"
                    class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm text-center border border-slate-200 rounded-md pl-3 pr-3 py-2 transition duration-300 ease focus:outline-none focus:border-slate-400 hover:border-slate-300 shadow-sm focus:shadow appearance-none [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
                    data-amount-target="output"
                  />
                  <button
                    id="increaseButton"
                    class="absolute right-1 top-1 rounded bg-slate-800 p-1.5 border border-transparent text-center text-sm text-white transition-all shadow-sm hover:shadow focus:bg-slate-700 focus:shadow-none active:bg-slate-700 hover:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                    type="button"
                    data-action="click->amount#increase"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
                      <path
                        d="M8.75 3.75a.75.75 0 0 0-1.5 0v3.5h-3.5a.75.75 0 0 0 0 1.5h3.5v3.5a.75.75 0 0 0 1.5 0v-3.5h3.5a.75.75 0 0 0 0-1.5h-3.5v-3.5Z"
                      />
                    </svg>
                  </button>
                </div>
              </div>
              <button class="bg-yellow-300 flex flex-row rounded-md p-2 text-white w-full justify-center hover:bg-yellow-500 " type="submit">
                
                <p>Add to bag</p>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
              </button>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<div class="flex flex-col">
    <div class="grid grid-cols-2 gap-2 sm:grid-cols-3 sm:gap-3 md:grid-cols-4 md:gap-5 lg:grid-cols-5 ">
    <% products.each do |product|%>
      <%= link_to product_path(product) , data: { turbo_frame: "show_product"} do%>
        <div class="relative max-w-sm h-80 rounded-md  shadow-lg" >
          <%= image_tag product.featured_image, class: "rounded-t-md w-full h-50" %>
          <div class="px-4 h-20 flex flex-wrap s:h-auto sm:py-4 md:h-auto md:px-6 md:py-2">
            <div class="font-bold text-md md:text-lg lg:text-xl mb-1 w-sm"><%= product[:name]%></div>
              <p class="text-gray-900 text-xs md:text-sm">
              <%= product.description %>
            </p>
          </div>
          <div class="absolute bottom-0 right-0 pr-2 pb-2">
            <span class="inline-block bg-blue-100 text-blue-800 text-xs rounded ">
              <%= product[:sales_price]%>
            </span> 
          </div>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
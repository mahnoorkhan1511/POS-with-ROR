<div class="flex flex-col">
  <div class="flex flex-row justify-between ">
    <div class="rounded-full p-2 hover:bg-pink-300 item-center">
      <%= link_to admin_products_path, class:"text-pink-800  hover:text-pink-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-7">
          <path fill-rule="evenodd" d="M7.28 7.72a.75.75 0 0 1 0 1.06l-2.47 2.47H21a.75.75 0 0 1 0 1.5H4.81l2.47 2.47a.75.75 0 1 1-1.06 1.06l-3.75-3.75a.75.75 0 0 1 0-1.06l3.75-3.75a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
        </svg>
      <%end%>
    </div>
    <div class="flex flex-row">
      <div class="p-2 ml-auto hover:bg-red-300 rounded-xl ">
        <%= button_to [:admin, @product], method: :delete, data: {turbo_confirm: "Yo man, Are You Crazy!?" }, class:"text-red-700 " do  %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>       
      </div>
      <div class="p-2 ml-auto hover:bg-indigo-300 rounded-xl ">
        <%= link_to edit_admin_product_path(@product), class:"text-indigo-500 hover:text-indigo-800"  do%>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <%end%>
    </div>
    </div>
    
  </div>
  <div class="flex flex-row p-10">
      <%= image_tag @product.featured_image, class:'h-150 w-150 rounded-xl' if @product.featured_image.attached? %>
      <div class="flex flex-col p-10 w-150">
        <div class="flex flex-row">
          <h1 class="text-2xl font-semibold"> <%= @product.name %></h1>
          <p class="pl-5 "><%= creation_status(@product)%></p>
        </div>
        
        <p class="text-lg font-medium"> <%= @product.description%></p>
        <div class="pt-3">
          <% @product.tags.each do |tag| %>
                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-1">
                  <%= tag.tag %>
                </span>
              <% end %>
        </div>
      </div>
    </div>
</div>
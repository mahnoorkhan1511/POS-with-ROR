<div class="overflow-y-auto">
  <div class="flex flex-row justify-between ">
    <h1 class="text-gray-500 text-2xl font-semibold p-5">Categories</h1>
    <%= link_to "Add a category ",new_admin_category_path, data: { turbo_frame: "add_category"}, class: "block bg-teal-700 py-6 px-4 text-white  hover:bg-teal-900 rounded-md text-md font-semibold" %>

  </div>
  <% if @categories.any? %>
    <table class="table-auto min-w-full">
      <thead class=" p-6  ">

        <tr class="p-6 border-b border-gray-400 text-center text-gray-900">
          
          <th  class="px-4 py-2 font-medium text-center">Name</th>
          <th  class="px-4 py-2 font-medium text-center">Number of Products</th>
        </tr>
      
      </thead>
      <tbody>
        
        <% @categories.each do |category|%>
        
          <tr class="border-b border-gray-200">
            
            <td class="px-6 py-4 text-center"><%= category[:name] %></td>
            <td class="px-6 py-4 text-center"><%= category.products.size%></td>
          
          </tr>
        
        <%end%>
      
      </tbody>
    </table>
    <% else %>
      <h1 class="text-sky-900 text-2xl font-bold p-5 opacity-50">No Category available, table is empty</h1>
    <% end %>
</div>
<%= turbo_frame_tag "add_category" %>